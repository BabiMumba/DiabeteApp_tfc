<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <!-- Date et heure -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/12/2024 14:30"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="@dimen/_8sdp" />

        <!-- Glycémie -->
        <TextView
            android:id="@+id/tvGlycemie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glycémie : 120 mg/dL"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/_4sdp" />

        <!-- Insuline -->
        <TextView
            android:id="@+id/tvInsuline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insuline : 5 unités"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/_4sdp" />

        <!-- Repas -->
        <TextView
            android:id="@+id/tvRepas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repas : Déjeuner"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/_4sdp" />

        <!-- Activité -->
        <TextView
            android:id="@+id/tvActivite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activité : Marche"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/_4sdp" />

        <!-- Commentaire -->
        <TextView
            android:id="@+id/tvCommentaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaire : Se sent bien"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="@dimen/_4sdp" />

        <!-- Source -->
        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source : patient"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="@dimen/_4sdp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 