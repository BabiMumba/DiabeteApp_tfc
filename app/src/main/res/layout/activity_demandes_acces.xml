<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:padding="@dimen/_16sdp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_keyboard_backspace_24"
            android:contentDescription="Retour"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Demandes d'accès"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_12sdp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les médecins demandent l'accès à vos données médicales. Vous pouvez accepter ou refuser ces demandes."
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="@dimen/_16sdp" />

        <!-- RecyclerView pour les demandes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDemandes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_16sdp" />

        <!-- Message si aucune demande -->
        <TextView
            android:id="@+id/tvAucuneDemande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucune demande d'accès en attente"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout> 