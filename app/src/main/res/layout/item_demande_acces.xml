<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <!-- Informations du médecin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomMedecin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Jean Dupont"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvSpecialite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologie"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvHopital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôpital Sendwe"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="@dimen/_2sdp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dr.dupont@email.com"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="@dimen/_2sdp" />

            <TextView
                android:id="@+id/tvDateDemande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demande du 15/12/2024"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/Accent"
                android:layout_marginTop="@dimen/_8sdp" />

        </LinearLayout>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refuser"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="20dp"
                android:layout_marginEnd="@dimen/_8sdp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/error" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccepter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepter"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 