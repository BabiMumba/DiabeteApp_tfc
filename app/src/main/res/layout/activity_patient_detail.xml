<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!-- Toolbar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/Accent" />
    <com.google.android.material.appbar.MaterialToolbar
        android:backgroundTint="@color/Accent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroud"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:tint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_backspace_24"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:id="@+id/btnBack"
                />
            <TextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Détails du Patient"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:id="@+id/titreTl"
                />


        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>



    <!-- ScrollView pour le contenu -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <!-- Informations du patient -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informations du Patient"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nom : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvNomPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jean Dupont"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvEmailPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jean@email.com"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Âge : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvAgePatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35 ans"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sexe : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvSexePatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculin"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poids : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvPoidsPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75 kg"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_8sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type diabète : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvTypeDiabete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TYPE_2"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inscription : "
                            android:textStyle="bold"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvDateInscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/12/2024"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Données médicales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Données Médicales"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="@dimen/_12sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDonnees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_16sdp" />

            <!-- Message si aucune donnée -->
            <TextView
                android:id="@+id/tvAucuneDonnee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucune donnée médicale disponible"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:visibility="gone" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>


    <!-- FAB pour ajouter des mesures -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMesure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/primary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:tint="@color/white" />

</RelativeLayout> 