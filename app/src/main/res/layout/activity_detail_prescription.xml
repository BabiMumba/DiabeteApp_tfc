<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/Accent" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/baseline_keyboard_backspace_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/titreTl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="serif"
                    android:text="Détail Prescription"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <!-- En-tête de la prescription -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRESCRIPTION MÉDICALE"
                        android:textAlignment="center"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvDatePrescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date : 24/07/2025"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tvStatut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statut : Active"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/Accent" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Informations du médecin -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Médecin Prescripteur"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvNomMedecin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Jean Dupont"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tvSpecialiteMedecin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endocrinologie"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tvHopitalMedecin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hôpital Jason Sendwe"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Informations du patient -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvNomPatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marie Dubois"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tvAgePatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 ans"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions générales -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructions Générales"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvInstructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suivre strictement les doses prescrites. Contrôler régulièrement la glycémie."
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Liste des médicaments -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Médicaments Prescrits"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMedicaments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textColor="@color/Accent"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rendez-vous de contrôle dans 2 semaines."
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Boutons d'action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModifier"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="Modifier"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExporter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="Exporter PDF"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout> 